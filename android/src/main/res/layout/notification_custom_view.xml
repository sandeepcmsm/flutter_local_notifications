<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/expanded_notification_height"
      >

    <ImageView
        android:id="@+id/imgCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/notification_gradient_overlay"
        android:padding="10dp"
        >

      <TextView
          android:id="@+id/txtTenantName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/txtTitle"
          android:textColor="@android:color/white"
          android:textSize="18sp"
          />

      <TextView
          android:id="@+id/txtTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/comment_publish_time"
          android:ellipsize="end"
          android:textColor="@android:color/white"
          android:textSize="16sp"
          android:layout_alignParentBottom="true"
          />

      <TextView
          android:id="@+id/comment_publish_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:ellipsize="end"
          android:singleLine="true"
          android:textColor="@android:color/white"
          android:textSize="10dp"
          />
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>